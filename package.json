  "devDependencies": {
    "standard": "^10.0.3"
  },
  "nodemonConfig": {
    "verbose": true,
    "ext": "js,tid,info,multids,json",
    "ignore": [
      "node_modules/*",
      "editions/public/output",
      "editions/public/themes",
      "editions/public/plugins",
      "editions/hack/tiddlers",
      "editions/hack-fs/*",
      "editions/src/*",
      "hack/content/*",
      "src/plugins/*/files/*"
    ],
    "delay": "1000"
  },
  "standard": {
    "env": {
      "browser": true,
      "node": true
    },
    "ignore": [
      "node_modules/",
      "src/plugins/*/files/",
      "editions/",
      "tw5-material/"
    ]
  }
